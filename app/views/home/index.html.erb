<div class="min-h-screen bg-sand">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-5xl sm:text-6xl md:text-7xl">
        Top-Down Learning
      </h1>
      <p class="mt-6 max-w-2xl mx-auto text-lg sm:text-xl md:mt-8 md:text-2xl">
        A systematic framework for learning, comparing, and synthesizing psychological and therapeutic approaches.
      </p>
      <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
        <% if user_signed_in? %>
          <div class="rounded-md shadow">
            <%= link_to "Get Started", "#", class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-sand bg-primary hover:bg-accent-dark md:py-4 md:text-lg md:px-10" %>
          </div>
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-sand bg-primary hover:bg-accent-dark md:py-4 md:text-lg md:px-10" %>
          </div>
        <% else %>
          <div class="rounded-md shadow">
            <%= link_to "Sign Up", new_user_registration_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-sand bg-primary hover:bg-accent-dark md:py-4 md:text-lg md:px-10" %>
          </div>
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <%= link_to "Log In", new_user_session_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-sand bg-primary hover:bg-accent-dark md:py-4 md:text-lg md:px-10" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
